@code {
    private async Task WriteToConsole()
    {
        await jsRuntime.InvokeVoidAsync("WriteCSharpMessageToConsole", DotNetObjectReference.Create(this));
    }

    [JSInvokable]
    public Task<string> GetHelloMessage()
    {
        var message = "Hello from a C# instance";
        return Task.FromResult(message);
    }
}
@*https://chrissainty.com/using-javascript-interop-in-razor-components-and-blazor/*@










@switch (formDataModel.PhaseNo)
{
    case 0:
        goto default;

    case 1:
        <KansaSearchFragment @bind-Phase1Data="formDataModel" @bind-DBSourceData="DBData" />
        break;

    case 2:
        <SearchActivity @bind-Phase2Data="formDataModel" @bind-SearchResultData="ResultData" @bind-DBSourceData="DBData" />
        break;

    case 3:
        <DokusyaActivity @bind-CommonPhase1="ResultData" @bind-DBSourceData="DBData" />
        break;


    default:

        <div>ハンドリングエラー:存在しないページ（PhaseNo:@formDataModel.S_PhoneNo )</div>
        break;

}

